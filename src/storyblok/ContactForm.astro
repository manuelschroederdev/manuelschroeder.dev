---
import { storyblokEditable } from '@storyblok/astro'
import { renderRichText } from '@storyblok/astro'
import Headline from '../components/Headline.astro'
import ContactForm from './ContactForm.vue'

const { blok, index } = Astro.props

const headlineTag = index === 0 ? 'h1' : 'h2'

const renderedRichText = renderRichText(blok.text)
---

<section
  {...storyblokEditable(blok)}
  class="page-section container max-w-xl mx-auto"
>
  <Headline tag={headlineTag} margin="small">{blok.headline}</Headline>
  <section
    set:html={renderedRichText}
    class="prose prose-stone-200 dark:prose-invert mb-6"
  >
  </section>
  <ContactForm blok={blok} client:idle />
</section>
