---
import Link from './Link.astro'

const { article, slug, cardHeadlineTag = 'h2' } = Astro.props

const published = new Date(article.published)
const sep = '/'
const publishedFormatted =
  published.getMonth() +
  sep +
  published.getDay() +
  sep +
  published.getFullYear()

const HeadlineTag = cardHeadlineTag
---

<article
  class="max-w-sm relative bg-stone-100 dark:bg-stone-800 transition-all hover:-translate-y-1 duration-500 hover:shadow-md p-6 rounded-lg text-left"
>
  <HeadlineTag class="text-xl md:text-2xl font-extrabold mb-3"
    >{article.headline}
  </HeadlineTag>
  <time
    class="absolute top-2 right-2 text-sm font-normal"
    set:html={publishedFormatted}></time>
  <div class="line-clamp-4 leading-relaxed mb-3">
    {article.teaser}
  </div>
  <Link href={'/' + slug}>Read full article</Link>
</article>
